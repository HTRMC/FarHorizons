<screen>
  <panel width="fill" height="fill" layout="anchor">

    <!-- Centered column, full height -->
    <panel anchor_x="center" anchor_y="center" direction="column"
           cross_align="stretch" gap="8" width="800" height="fill"
           padding_top="32" padding_bottom="32">

      <!-- Search bar -->
      <text_input id="world_name_input" placeholder="Search worlds..."
                  width="fill" height="32" max_len="32"/>

      <!-- World list (children added at runtime) -->
      <list_view id="world_list" width="fill" height="fill" flex_grow="1"
                 background="#222233FF" item_height="72"
                 selection_color="#3366AAFF" on_change="world_select"
                 on_double_click="play_world"/>

      <!-- Empty state label (shown when no worlds) -->
      <label id="no_worlds_label" text="No worlds yet â€” create one below."
             color="#999999FF" width="fill" visible="false"/>

      <!-- Row 1: Play World | Create World -->
      <panel direction="row" gap="8" width="fill" height="auto" cross_align="center">
        <button text="Play World" width="fill" height="40" flex_grow="1"
                background="#335588FF" shadow="true" on_click="play_world"/>
        <button text="Create World" width="fill" height="40" flex_grow="1"
                background="#338833FF" shadow="true" on_click="create_world"/>
      </panel>

      <!-- Row 2: Edit | Delete | Backup | Back -->
      <panel direction="row" gap="8" width="fill" height="auto" cross_align="center">
        <button text="Edit" width="fill" height="40" flex_grow="1"
                background="#335588FF" shadow="true" on_click="show_coming_soon"/>
        <button text="Delete" width="fill" height="40" flex_grow="1"
                background="#553333FF" shadow="true" on_click="delete_world"/>
        <button text="Backup" width="fill" height="40" flex_grow="1"
                background="#335588FF" shadow="true" on_click="show_coming_soon"/>
        <button text="Back" width="fill" height="40" flex_grow="1"
                background="#555555FF" shadow="true" on_click="back_to_title"/>
      </panel>

      <!-- Delete confirmation (hidden by default) -->
      <panel id="delete_confirm" direction="row" gap="8" width="fill" height="auto"
             cross_align="center" visible="false">
        <label id="delete_label" text="Delete world?" color="#FF5555FF"
               width="fill" flex_grow="1"/>
        <button text="Yes" width="60" height="28" background="#AA3333FF" shadow="true"
                on_click="confirm_delete"/>
        <button text="No" width="60" height="28" background="#555555FF" shadow="true"
                on_click="cancel_delete"/>
      </panel>

    </panel>

  </panel>
</screen>
