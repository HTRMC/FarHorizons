<screen>
  <panel width="fill" height="fill" layout="anchor">

    <!-- Center area: title + buttons -->
    <panel anchor_x="start" anchor_y="center" offset_x="64" direction="column"
           cross_align="start" gap="32" width="auto" height="auto">

      <!-- Title row -->
      <panel direction="row" gap="12" cross_align="start" width="auto" height="auto">
        <label text="FARHORIZONS" color="#FFCC00FF" font_size="3"/>
        <label text="ALPHA" color="#AAAAAAFF" font_size="1"/>
      </panel>

      <!-- Button stack -->
      <panel direction="column" gap="8" width="280" cross_align="stretch">
        <button text="Singleplayer" width="fill" height="40" background="#335588FF"
                on_click="show_singleplayer"/>
        <button text="Multiplayer" width="fill" height="40" background="#335588FF"
                on_click="show_coming_soon"/>
        <button text="Options" width="fill" height="40" background="#335588FF"
                on_click="show_coming_soon"/>
        <button text="Credits" width="fill" height="40" background="#335588FF"
                on_click="show_coming_soon"/>
        <button text="Quit" width="fill" height="40" background="#442222FF"
                on_click="quit_game"/>
      </panel>
    </panel>

    <!-- Bottom-left version info -->
    <label text="FARHORIZONS Alpha 0.1.0 (c)2026 HTRMC" color="#666666FF"
           anchor_x="start" anchor_y="end" offset_x="8" offset_y="-8"/>

    <!-- Coming Soon modal (hidden by default) -->
    <panel id="coming_soon_modal" width="fill" height="fill" layout="anchor"
           visible="false" background="#00000088">
      <panel width="300" height="auto" anchor_x="center" anchor_y="center"
             background="#1A1A2ECC" padding="16" direction="column"
             cross_align="center" gap="12" border_width="1" border_color="#444466FF">
        <label text="Coming Soon" color="#FFFFFFFF" font_size="2"/>
        <button text="OK" width="120" height="32" background="#335588FF"
                on_click="dismiss_modal"/>
      </panel>
    </panel>

  </panel>
</screen>
