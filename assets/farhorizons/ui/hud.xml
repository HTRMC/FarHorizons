<screen passthrough="true">
  <panel width="fill" height="fill" layout="anchor">

    <!-- Crosshair: centered on screen (15x15 at 2x = 30x30) -->
    <image id="crosshair" src="hud:crosshair"
           width="30" height="30" anchor_x="center" anchor_y="center"/>

    <!-- Hotbar container: bottom-center, flush at bottom (182x22 at 2x = 364x44) -->
    <panel width="364" height="44" layout="anchor"
           anchor_x="center" anchor_y="end">

      <!-- Hotbar background image -->
      <image id="hotbar_bg" src="hud:hotbar" width="364" height="44"/>

      <!-- 9 slot color panels: each 24x24, at slot pitch 40px, inset 6px -->
      <panel id="slot_0" width="24" height="24" offset_x="6"   offset_y="6"/>
      <panel id="slot_1" width="24" height="24" offset_x="46"  offset_y="6"/>
      <panel id="slot_2" width="24" height="24" offset_x="86"  offset_y="6"/>
      <panel id="slot_3" width="24" height="24" offset_x="126" offset_y="6"/>
      <panel id="slot_4" width="24" height="24" offset_x="166" offset_y="6"/>
      <panel id="slot_5" width="24" height="24" offset_x="206" offset_y="6"/>
      <panel id="slot_6" width="24" height="24" offset_x="246" offset_y="6"/>
      <panel id="slot_7" width="24" height="24" offset_x="286" offset_y="6"/>
      <panel id="slot_8" width="24" height="24" offset_x="326" offset_y="6"/>

      <!-- Selection highlight (24x23 at 2x = 48x46), offset_x set by binder -->
      <image id="selection" src="hud:selection" width="48" height="46"
             offset_x="-2" offset_y="-2"/>

      <!-- Offhand slot (29x24 at 2x = 58x48), left of hotbar -->
      <image id="offhand" src="hud:offhand" width="58" height="48"
             offset_x="-58" offset_y="-2"/>
    </panel>

    <!-- Block name label: centered, above hotbar -->
    <label id="block_name" text="" color="#FFFFFFE6"
           anchor_x="center" anchor_y="end" offset_y="-44" visible="false"
           shadow="true" shadow_color="#000000AA"/>

  </panel>
</screen>
